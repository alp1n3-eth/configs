// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "show_edit_predictions": true,
  "languages": {
    "Markdown": {
      "show_edit_predictions": false
    },
    "YAML": {
      "show_edit_predictions": false
    },
    "Go": {
      "edit_predictions_disabled_in": ["comment", "string"],
      "format_on_save": "off",
      "extend_comment_on_newline": false
    }
  },
  "features": {
    "edit_prediction_provider": "none"//"zed",
  },
  "auto_install_extensions": {
    "html": true,
    "sql": true,
    "vue": true,
    "make": true,
    "elixir": true,
    "log": true,
    "astro": true,
    "docker-compose": true,
    "dockerfile": true,
    "zedokai": true,
    "golangci-lint": true,
    "tailwind-theme": true
  },
  "ui_font_size": 18,
  "ui_font_weight": 400,
  "buffer_font_size": 18,
  "cursor_blink": false,
  "soft_wrap": "editor_width",
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Zedokai Darker (Filter Spectrum)"
  },
  "vim_mode": true,
  "format_on_save": "off",
  "autosave": "on_focus_change",
  "restore_on_startup": "last_session",
  "auto_update": true,
  "tabs": {
    "always_show_close_button": true,
    "file_icons": true
  },
  "terminal": {
    "blinking": "off",
    "font_size": 16,
    "copy_on_select": true,
    "button": true
  },
  "assistant": {
    "enabled": false,
    "version": "1"
  },
  "active_pane_modifiers": {
    "inactive_opacity": 0
  }
}
